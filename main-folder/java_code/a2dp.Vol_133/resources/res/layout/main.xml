<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:persistentDrawingCache="all" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TableRow android:gravity="center_horizontal" android:id="@+id/TableRow01" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TableRow android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/TableRow02" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <Button android:layout_gravity="left" android:id="@+id/Locationbtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/GetLocButtonString" android:layout_weight="1"/>
        <Button android:scrollbarAlwaysDrawHorizontalTrack="true" android:layout_gravity="center" android:id="@+id/Button01" android:visibility="visible" android:clickable="true" android:saveEnabled="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/FindDevices" android:layout_weight="1"/>
        <Button android:layout_gravity="right" android:id="@+id/ServButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/StartService" android:freezesText="false" android:layout_weight="1"/>
    </TableRow>
    <ListView android:id="@+id/ListView01" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:contentDescription="@string/ListName"/>
</LinearLayout>
